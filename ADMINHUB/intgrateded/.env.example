## AdminHub Environment variables
# Copy this file to .env and fill in values for your environment

# Postgres connection string (Use host that Docker or server can reach)
# Example: postgresql://user:password@db-host:5432/postgres
DATABASE_URL=

# Production mode
NODE_ENV=production

# Sessions
SESSION_SECRET=replace_with_a_secure_random_string
SESSION_COOKIE_SECURE=false # set to true when serving over HTTPS
SESSION_COOKIE_NAME=adminhub.sid
SESSION_COOKIE_SAME_SITE=lax

# CORS - change to your frontend host/domain
CORS_ORIGIN=http://158.220.107.106:8080

# Optional Chatwoot config (used by the app admin UI)
# CHATWOOT_INSTANCE_URL=
# CHATWOOT_API_ACCESS_TOKEN=
# CHATWOOT_ACCOUNT_ID=

# Mailcow config (optional mailbox provisioning)
# MAILCOW_INSTANCE_URL=
# MAILCOW_API_KEY=
# MAILCOW_DOMAIN=

# Other helpful variables
PORT=5000
