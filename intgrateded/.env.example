# ========================================
# Admin Hub - Environment Configuration
# ========================================
# Copy this file to .env and fill in values for your environment
# DO NOT commit .env to version control!

# ========================================
# Database Configuration (Docker)
# ========================================

# Database name (PostgreSQL)
DB_NAME=adminhub_db

# Database username (PostgreSQL)
DB_USER=adminhub_user

# Database password (PostgreSQL) - CHANGE THIS!
DB_PASSWORD=your_secure_password_here

# Full database connection URL
# For Docker: use 'postgres' as hostname (Docker service name)
# Format: postgresql://username:password@postgres:5432/database_name
DATABASE_URL=postgresql://adminhub_user:your_secure_password_here@postgres:5432/adminhub_db

# ========================================
# Application Configuration
# ========================================

# Node environment (development or production)
NODE_ENV=production

# Port (internal container port)
PORT=5000

# External port for Docker mapping (what port to access from outside)
EXTERNAL_PORT=9100

# ========================================
# Session & Security
# ========================================

# Session secret - CHANGE THIS! Use a strong random string
# Generate with: openssl rand -base64 32
SESSION_SECRET=replace_with_a_secure_random_string

# Secure cookies - CRITICAL for session persistence!
# Set to 'false' if using HTTP (e.g., http://your-vps-ip:9100)
# Set to 'true' only when using HTTPS (https://yourdomain.com)
# If this doesn't match your protocol, sessions will NOT work!
SESSION_COOKIE_SECURE=false

# CSRF protection setting
SESSION_COOKIE_SAME_SITE=lax

# Session cookie name
SESSION_COOKIE_NAME=adminhub.sid

# ========================================
# Admin User Setup
# ========================================

# Admin password - CHANGE THIS!
# Used during database seeding
# Email: admin@company.com
ADMIN_PASSWORD=admin123

# ========================================
# CORS Configuration
# ========================================

# Allowed origin for CORS - change to your VPS IP/domain
# This tells the API which domains can make requests to it
#
# Examples:
#   - http://158.220.107.106:9100 (local testing on VPS)
#   - https://yourdomain.com (production domain)
#   - http://158.220.107.106:9100,https://yourdomain.com (both)
#
# IMPORTANT: If you get "Not allowed by CORS" errors, make sure this includes
# the origin you're accessing the app from (protocol://host:port)
#
CORS_ORIGIN=http://158.220.107.106:9100

