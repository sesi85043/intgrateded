# Production Environment Configuration
# Copy this to .env.production on your VPS and fill in the values

# Node Environment
NODE_ENV=production

# Server Port (internal container port - do not change)
PORT=5000

# Database Configuration
DB_NAME=adminhub
DB_USER=adminhub_user
DB_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD_MIN_32_CHARS
DATABASE_URL=postgresql://adminhub_user:CHANGE_THIS_TO_A_STRONG_PASSWORD_MIN_32_CHARS@postgres:5432/adminhub

# Session Security - MUST change this to a random secure string
SESSION_SECRET=GENERATE_A_RANDOM_STRING_HERE_MIN_64_CHARS_USE_openssl_rand_-base64_32

# External Port (what users access from outside)
# This is the port that will be exposed to the internet
EXTERNAL_PORT=8080

# Optional: Application Name
APP_NAME=AdminHub

# Optional: Log Level
LOG_LEVEL=info

# Optional: CORS Settings (if frontend is on different domain)
# CORS_ORIGIN=https://yourdomain.com

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
