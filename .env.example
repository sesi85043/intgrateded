# ========================================
# Admin Hub - Environment Configuration
# ========================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control!

# ========================================
# Database Configuration (Docker)
# ========================================

# Database name
DB_NAME=adminhub_db

# Database username
DB_USER=adminhub_user

# Database password - CHANGE THIS!
DB_PASSWORD=your_secure_password_here

# Full database connection URL
# For Docker: use 'postgres' as hostname (Docker service name)
# Format: postgresql://username:password@postgres:5432/database_name
DATABASE_URL=postgresql://adminhub_user:your_secure_password_here@postgres:5432/adminhub_db

# ========================================
# Application Configuration
# ========================================

# Node environment (development or production)
NODE_ENV=production

# Port (internal container port)
PORT=5000

# External port for Docker mapping (what port to access from outside)
EXTERNAL_PORT=9100

# ========================================
# Session & Security
# ========================================

# Session secret - CHANGE THIS! Use a strong random string
# Generate with: openssl rand -base64 32
SESSION_SECRET=replace_with_a_secure_random_string

# Secure cookies (true for HTTPS, false for HTTP)
SESSION_COOKIE_SECURE=true

# CSRF protection setting
SESSION_COOKIE_SAME_SITE=strict

# Session cookie name
SESSION_COOKIE_NAME=adminhub.sid

# ========================================
# Admin User Setup
# ========================================

# Admin password - CHANGE THIS!
# Used during database seeding
# Email: admin@company.com
ADMIN_PASSWORD=your_secure_admin_password_here

# ========================================
# CORS Configuration
# ========================================

# Allowed origin for CORS (comma-separated for multiple)
# This tells the API which domains can make requests to it
#
# Examples:
#   - https://yourdomain.com (production domain)
#   - http://127.0.0.1:9100 (local testing on VPS)
#   - http://localhost:9100 (local testing)
#   - https://yourdomain.com,http://127.0.0.1:9100 (both production and testing)
#   - * (allow all - NOT recommended for production)
#
# IMPORTANT: If you get "CORS rejected origin" errors, make sure this includes
# the origin you're accessing the app from (protocol://host:port)
#
CORS_ORIGIN=https://yourdomain.com

